<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Dashboard • Online Voting</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="topbar">
    <div>Logged in as <strong><%= user.username %></strong></div>
    <nav>
      <% if (user.is_admin) { %><a href="/admin">Admin</a><% } %>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <main class="box">
    <h1>Open Elections</h1>
    <% if (openElections.length === 0) { %>
      <p>No open elections.</p>
      <% if (user.is_admin) { %>
        <p><a class="btn" href="/admin">Go to Admin to create one</a></p>
      <% } %>
    <% } else { %>
      <ul>
        <% openElections.forEach(e => { %>
          <li>
            <strong><%= e.name %></strong>
            <a class="btn" href="/vote/<%= e._id %>">Vote</a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
